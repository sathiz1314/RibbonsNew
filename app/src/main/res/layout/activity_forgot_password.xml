<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ribbons.activities.ForgotPasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:elevation="@dimen/common_margin_ten"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:textColor="@color/basic_black"
        android:textStyle="bold"
        android:textSize="@dimen/font_normal"
        android:layout_marginLeft="@dimen/common_margin_twentyfour"
        android:layout_marginRight="@dimen/common_margin_twentyfour"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_centerInParent="true"
        android:theme="@style/MyAppThemeEditText"
        android:layout_marginTop="@dimen/common_margin_ten"
        android:id="@+id/editText"
        android:layout_marginLeft="@dimen/common_margin_twentyfour"
        android:layout_marginRight="@dimen/common_margin_twentyfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/editText"
        android:id="@+id/btForgetSubmit"
        android:layout_margin="@dimen/common_margin_twentyfour"
        android:textStyle="bold"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_bg_global"
        android:text="@string/submits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
